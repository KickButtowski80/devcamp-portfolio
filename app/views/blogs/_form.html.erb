<!--form_for is better practice for CRUD than form_tag-->
<!--no need to pass hash because by default hash is passed
<textarea class="form-control" rows="25" name="blog[body]" id="blog_body">
</textarea>
look at value of name which has passed by default and the same conidition
for title
-->


<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %> 
     <% blog.errors.full_messages.each do |error| %>
      <%= alert_generator error%>
     <%end %> 
  <% end %>

  <div class=" form-group">
    <%#= f.label :title %>
    <%= f.text_field :title  ,class:'form-control', placeholder: 'Title'%>
  </div>

  <div class="form-group">
    <%= f.label :topic_id%>
    <%= f.collection_select(:topic_id, Topic.all, :id, :title,
      {
        selected: blog.topic.id,
        include_blank: true
      },
      class: 'form-control'
                        )
    %>
  </div>
  
  <div class="form-group ">
    <%#= f.label :body %>
    <%= f.text_area :body  ,class:'form-control', rows: 25, placeholder: 'Body'%>
  </div>

  <div class="form-group ">
    <%= f.submit class:'btn btn-primary' %>
  </div>
<% end %>
